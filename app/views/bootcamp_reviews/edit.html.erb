<!--Partials Nav bar-->
<%= render 'partials/nav_show' %>

<header>
  <h1>Write a Bootcamp Review</h1>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-12" id="review-form">
      <div class="the-form">
        <%= form_for @bootcamp_review do |f| %>

<h3>What was your overall experience at this bootcamp?</h3> <%= f.text_area :content, cols: 50, rows: 10 %>

<h3>Did you find employment after graduation?</h3>
		<div class="radio">
  		  <label><%= f.radio_button :worthit, :content %>Employed</label>
  		</div>
  		<div class="radio">
  		  <label><input type="radio" name="employment" id="not-employed" <% if @bootcamp_review.hired == "Not Employed"%>checked="checked" <% end %>>Not Employed</label>
  		</div>
  		<div class="radio">
  		  <label><input type="radio" name="employment" id="still-attending" <% if @bootcamp_review.hired == "Still Attending"%> checked="checked"<% end %>>Still Attending</label>
  		</div>
  		<div class="radio">
  		  <label><input type="radio" name="employment" id="not-seeking-employment" <% if @bootcamp_review.hired == "Not Seeking Employment"%> checked="checked" <% end %>>Not Seeking Employment</label>
  		</div>

  	  <h3>Was the course worth the tuition?</h3>
      <div class="radio">
  		  <label><input type="radio" name="worth" id="worth-it-yes" <% if @bootcamp_review.worthit == "Yes" %> checked="checked" <% end %>>Yes</label>
  		</div>
  		<div class="radio">
  		  <label><input type="radio" name="worth" id="worth-it-no" <% if @bootcamp_review.worthit == "No" %> checked="checked" <% end %>>No</label>
		</div>

		<h3>On a scale of 1 - 10, how would you rate...?</h3>   		
  		<p>Facilities/Campus <%= f.number_field :campus %></p>
  		<p>Job Support & Career Services <%= f.number_field :location %></p>
  		<p>Location <%= f.number_field :jobhelp %></p>

		
		
		
<% end %>
      

<!-- <form id="instructor-review-form">
	<textarea cols="30" rows="5" id="instructor-review-form" name="instructor_review[text]" placeholder='Instructor'></textarea>
</form> -->

      </div>
    </div>
  </div>
</div>


<!--Footer-->
<%= render "partials/footer_show" %>


<header>
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <img class="img-responsive" src="https://images.unsplash.com/19/desktop.JPG?q=80&fm=jpg&s=10cf10aead07bd0897cc50bccc63ac07" alt="">
            </div>
                <div class="col-lg-4 intro-text">
                    <span class="name"><%= @bootcamp.name %></span>
                    <hr class="star-light">
	                    <div class="bootcamp-info">
	                    	<ul class="column top" style="list-style:none;">

	                    			<li><%= @bootcamp.address %></li>
	                    			<li><%= @bootcamp.url %></li>
	                    			<li><%= @bootcamp.phone %></li>
	                    			<li><%= @bootcamp.email %></li>
	                    	</ul>

	                    	<ul class="column under" style="list-style:none;">
	                    		<h4>Courses offered</h4>
	                    			<li><% @bootcamp.courses.split("|").each do | course |  %></li>
	                    			<li> <%= course %> </li>
	                    			<% end %>

	                    	</ul>
	                    </div>
        		</div>
        </div>

    <hr class="star-light">

<a type="button" class="btn btn-default" href="/bootcamps/<%= @bootcamp.id %>/review" data-no-turbolink="true">Submit a Review!</a>

<a type="button" class="btn btn-default" href="/bootcamp_reviews/<%= @bootcamp.id %>" data-no-turbolink="true">Read All Reviews</a>

</header>

<!--Partials Nav bar-->
<%= render 'partials/nav_show' %>
<a name="reviews"></a>


<!--Review Section-->
<div class="container">
	<div class="row">
		<h1>Reviews</h1>
		<div class="col-lg-10 col-sm-12">

		 <% 6.times do |i| %>
			<% review =  @bootcamp.bootcamp_reviews[@reviewsLength - i] %>

			<div class="col-lg-12 col-sm-12" id="review">
				<div class="col-lg-3 col-md-3 col-xs-12 user-review-info">
					<ul style="list-style:none;">
						<li class="user-photo"><img src="http://2016rotarypresidentialconferencemanila.org/wp-content/uploads/2015/05/user-icon-silhouette.png"></li>
						<li> <%= User.find_by_id(review.user_id).username %></li>
						<li><%= review.created_at %></li>
					</ul>
				</div>
				<div class="col-lg-9 col-md-9 col-xs-12">
					<div class="col-lg-12 title-ratings">
						<div class="col-lg-4 col-sm-4 col-xs-6 rating-boxes"><p>Overview <br> Amazing!</p></div>
						<div class="col-lg-4 col-sm-4 col-xs-6 rating-boxes"><p>Job search: <br><%= review.jobhelp %></p></div>
						<div class="col-lg-4 col-sm-4 col-xs-6 rating-boxes"><p>Instructors: <br> Amazing!</p></div>

						<div class="col-lg-4 col-sm-4 col-xs-6 rating-boxes"><p>Location: <br> <%= review.location %></p></div>
						<div class="col-lg-4 col-sm-4 col-xs-6 rating-boxes"><p>Worth it? <br> <%= review.worthit %></p></div>
						<div class="col-lg-4 col-sm-4 col-xs-6 rating-boxes"><p>Hired? <br>  <%= review.hired %></p></div>
					</div>

					<div class="col-lg-12 review">
						<p><%= review.content %></p>
					</div>
					<h5 class="more"><a href="#" class="button">Read More...</a></h5>
				</div>
			</div>
			<!--End of Review-->
			<% end %>
		</div>

			<!-- Sidebar -->
		<div class="col-lg-2 col-xs-12 photo">
			<ul>
				<h5>More Information</h5>
				<li>hours</li>
				<li>hours</li>
				<li>hours</li>
				<li>hours</li>
				<li>hours</li>
			</ul>
		</div>
		<!-- /#sidebar-wrapper -->

	</div>
</div>


<%= render "partials/footer_show" %>

<div class="footer text-center">
	<div class="container">
		<div class="row">
			<div class="col-lg-4">
				<h3>About Us</h3>
			</div>
			<div class="col-lg-4">
				<h3>Let's get social</h3>
			</div>
			<div class="col-lg-4">
				<h3>Location</h3>
			</div>
		</div>
	</div>
</div>


<header>
    <div class="container">
        <div class="row">

          <!--Bootcamp Image-->
            <div class="col-lg-4">
                <!-- <img class="img-responsive" src="https://images.unsplash.com/19/desktop.JPG?q=80&fm=jpg&s=10cf10aead07bd0897cc50bccc63ac07" alt=""> -->
            </div>

              <!--Bootcamp Info-->
                <div class="col-lg-8 intro-text">
                    <span class="name"><%= @bootcamp.name %></span>
                    <hr class="star-light">
                    <div class="col-lg-9">
                      <div class="bootcamp-info">
                        <ul class="column top" style="list-style:none;">
                            <li><%= @bootcamp.address %></li>
                            <li><%= @bootcamp.url %></li>
                            <li><%= @bootcamp.phone %></li>
                            <li><%= @bootcamp.email %></li>
                        </ul>
                        <ul class="column under" style="list-style:none;">
                          <h4>Courses offered</h4>
                            <li><% @bootcamp.courses.split("|").each do | course |  %></li>
                            <li> <%= course %> </li>
                            <% end %>
                        </ul>
                      </div>
                  </div>
            </div>
        </div>

    <hr class="star-light">
      
      <h3>Totals</h3>
      Location: <%= @bootcamp.locationTotal %> <br>
      Job Help: <%= @bootcamp.jobhelpTotal%> <br>
      Campus: <%= @bootcamp.campusTotal%> <br><br>

      Worth It? <br>
      Yes: <%= @bootcamp.worthYesTotal %> <br>
      No: <%= @bootcamp.worthNoTotal %> <br><br>

      Hired? <br>
      Employed: <%= @bootcamp.employedTotal %><br>
      Not Employed: <%= @bootcamp.notEmployedTotal %><br>
      Still Attending: <%= @bootcamp.stillAttendingTotal %><br>
      Not Seeking: <%= @bootcamp.notSeekingTotal %><br><br>

      Overall: <%= @bootcamp.overall %><br>

      <h3>Averages</h3>

      Worth It Average<br> 
      Yes: <%= @bootcamp.yesAvg %><br> 
      No: <%= @bootcamp.noAvg %> <br><br>

      Hired Average <br>
      Employed: <%= @bootcamp.employedAvg %> <br>
      Not Employed: <%= @bootcamp.notEmployedAvg %> <br>
      Still Attending: <%= @bootcamp.stillAttendingAvg %> <br>
      Not Seeking: <%= @bootcamp.notSeekingAvg %> <br><br>

      Location: <%= @bootcamp.locationAvg %><br>
      Job Help: <%= @bootcamp.jobhelpAvg %><br>
      Campus: <%= @bootcamp.campusAvg %><br><br>

      Overall Average: <%= @bootcamp.overallAvg %>


    <!--Header buttons-->
    <div class="col-lg-12" id="review-button">
        <a type="button" class="btn btn-default" href="/bootcamps/<%= @bootcamp.id %>/review" data-no-turbolink="true">Submit a Review!</a>
        <a type="button" class="btn btn-default" href="/bootcamp_reviews/<%= @bootcamp.id %>" data-no-turbolink="true">Read All Reviews</a>
      </div>

</header>